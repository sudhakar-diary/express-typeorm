{
  "compilerOptions": {
    "target": "ES2020",
    "types": [
      "node"
    ],
    "lib": [
      "es2022"
    ],
    "module": "CommonJS",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": ".",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@exception/*": [
        "src/exception/*"
      ],
      "@module/*": [
        "src/module/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "coverage",
    "dist",
    "node_modules"
  ]
}